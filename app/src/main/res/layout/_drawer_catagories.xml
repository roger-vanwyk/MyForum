<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear7"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:background="#311B92"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/imageview7"
			android:layout_width="260dp"
			android:layout_height="180dp"
			android:background="@android:color/transparent"
			android:src="@drawable/jubilee_icon"
			android:scaleType="center"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear8"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_telephone"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginBottom="5dp"
			android:background="#0D47A1"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image_call"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_call_black"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/text_number"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="left|center_vertical"
				android:text="(+27) 21 931 1374"
				android:textSize="16sp"
				android:textStyle="bold|italic"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_email"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginBottom="5dp"
			android:background="#0D47A1"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image_mail"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_email_black"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/text_email"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="left|center_vertical"
				android:text="info\@jubileelife.co.za"
				android:textSize="16sp"
				android:textStyle="bold|italic"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_location"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:layout_marginBottom="5dp"
			android:background="#0D47A1"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image_location"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_location_on_black"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/text_location"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="left|center_vertical"
				android:text="Cnrs Denton &amp; Ring Rds,\nParow Industrial, 7500"
				android:textSize="14sp"
				android:textStyle="bold|italic"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_donations"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#0D47A1"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image_donation"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_attach_money_black"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/text_donation"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="left|center_vertical"
				android:text="donations"
				android:textSize="16sp"
				android:textStyle="bold|italic"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear_footer"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:background="#212121"
		android:gravity="right|bottom"
		android:orientation="horizontal"
		android:layout_weight="1">
		<TextView
			android:id="@+id/textview6"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="bottom"
			android:text="Created by"
			android:textSize="11sp"
			android:textStyle="italic"
			android:textColor="#757575"/>
		<ImageView
			android:id="@+id/imageview6"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:src="@drawable/gif_bw"
			android:scaleType="fitXY"/>
	</LinearLayout>
</LinearLayout>
